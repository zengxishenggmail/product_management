<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Product Management</h1>
    
    <form action="/products" method="GET">
        <input type="text" name="product_name" placeholder="Filter by product name" value="<%= filter %>">
        <button type="submit">Filter</button>
    </form>
    
    <a href="/export" class="export-btn">Export to Excel</a>
    
    <table>
        <thead>
            <tr>
                <th>Product Code</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Amount</th>
                <th>Remark</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.product_code %></td>
                    <td><%= product.product_name %></td>
                    <td><%= product.qty %></td>
                    <td><%= product.price %></td>
                    <td><%= product.amount %></td>
                    <td><%= product.remark %></td>
                    <td><%= product.location %></td>
                    <td>
                        <a href="/products/<%= product.id %>">Edit</a>
                        <form action="/products/<%= product.id %>/delete" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    
    <h2>Add New Product</h2>
    <form action="/products" method="POST">
        <label for="product_code">Product Code:</label>
        <input type="text" id="product_code" name="product_code" required>
        
        <label for="product_name">Product Name:</label>
        <input type="text" id="product_name" name="product_name" required>
        
        <label for="qty">Quantity:</label>
        <input type="number" id="qty" name="qty" required>
        
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" step="0.01" required>
        
        <label for="amount">Amount:</label>
        <input type="number" id="amount" name="amount" step="0.01" required>
        
        <label for="remark">Remark:</label>
        <textarea id="remark" name="remark"></textarea>
        
        <label for="location">Location:</label>
        <input type="text" id="location" name="location">
        
        <button type="submit">Add Product</button>
    </form>
</body>
</html>